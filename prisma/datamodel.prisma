enum ParticipantStatus {
  REGISTERED,
  ATTENDING,
  CANCEL_WAITING,
  CANCELED
}

type User {
  id: ID! @unique
  uid: String! @unique
  name: String!
  picture: String
}

type Community {
  id: ID! @unique
  name: String! @unique
  communityOwners: [CommunityOwner!]!
  events: [Event!]!
}

type CommunityOwner {
  id: ID! @unique
  community: Community!
  user: User!
}

type Event {
  id: ID! @unique
  name: String!
  description: String
  openedAt: DateTime!
  closedAt: DateTime!
  community: Community!
  ticketTypes: [TicketType!]!
}

type TicketType {
  id: ID! @unique
  name: String!
  registrationCapacity: Int!
  registrationFee: Int!
  registrationOpenedAt: DateTime!
  registrationClosedAt: DateTime!
  event: Event!
  participants: [Participant!]!
}

type Participant {
  id: ID! @unique
  status: ParticipantStatus!
  ticketType: TicketType!
  user: User!
  checkIn: CheckIn
}

type CheckIn {
  id: ID! @unique
  participant: Participant!
}
